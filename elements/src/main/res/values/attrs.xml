<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircularImageview">
        <attr name="borderSize" format="dimension" />
        <attr name="borderColor" format="color" />
    </declare-styleable>

    <declare-styleable name="UIButton">
        <!--Common-->
        <attr name="backgroundColor" format="color" />
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textStyle" format="integer">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
        </attr>
        <attr name="fontName" format="string" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="icon" format="reference" />
        <attr name="imageShape" format="integer">
            <enum name="normal" value="1" />
            <enum name="circular" value="2" />
        </attr>
        <attr name="imageWidth" format="dimension" />
        <attr name="imageHeight" format="dimension" />
        <attr name="spacing" format="dimension" />
        <!--BUTTON-->
        <attr name="pressedBackgroundColor" format="color" />
        <attr name="pressedTextColor" format="color" />
        <attr name="pressedIcon" format="reference" />
        <attr name="iconPosition" format="integer">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="gravity" format="integer">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="center" value="3" />
        </attr>

        <attr name="buttonShape" format="integer">
            <enum name="rectangle" value="1" />
            <enum name="oval" value="2" />
        </attr>
    </declare-styleable>





    <declare-styleable name="UIEditText">
        <!--Common-->
        <attr name="backgroundColor" />
        <attr name="text" />
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="textStyle" />
        <attr name="fontName" />
        <attr name="strokeColor"/>
        <attr name="strokeWidth" />
        <attr name="cornerRadius"/>
        <attr name="icon" />
        <attr name="imageShape"/>
        <attr name="imageWidth" />
        <attr name="imageHeight"/>
        <attr name="spacing" />
        <!--EDITTEXT-->
        <attr name="hintText" format="string" />
        <attr name="hintTextColor" format="color" />
        <attr name="hintTextSize" format="dimension" />
        <attr name="helperText" format="string" />
        <attr name="helperTextSize" format="dimension" />
        <attr name="helperTextColor" format="color" />
        <attr name="helperTextStyle" format="integer">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
        </attr>
        <attr name="helperTextPosition" format="integer">
            <enum name="top_left" value="1" />
            <enum name="top_right" value="2" />
            <enum name="bottom_left" value="3" />
            <enum name="bottom_right" value="4" />
        </attr>
        <attr name="helperFontName" format="string" />
        <attr name="iconAlignment" format="integer">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="editTextShape" format="integer">
            <enum name="rectangle" value="1" />
            <enum name="oval" value="2" />
            <enum name="none" value="3" />
        </attr>
        <attr name="showDivider" format="boolean" />
        <attr name="dividerColor" format="color" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="showLine" format="boolean" />
        <attr name="lineColor" format="color" />
        <attr name="lineWidth" format="dimension" />
        <attr name="autoStretch" format="boolean" />
        <attr name="singleLine" format="boolean" />
        <attr name="maxLines" format="integer" />
        <attr name="inputType" format="integer">
            <enum name="text" value="1" />
            <enum name="number" value="2" />
            <enum name="phone" value="3" />
            <enum name="datetime" value="4" />
            <enum name="number_decimal" value="8192" />
            <enum name="number_password" value="16" />
            <enum name="email" value="32" />
            <enum name="text_password" value="128" />
            <enum name="person_name" value="96" />
            <enum name="date" value="16" />
            <enum name="time" value="32" />
        </attr>
        <attr name="digits" format="string" />
        <attr name="allowPaste" format="boolean" />
        <attr name="allCaps" format="boolean" />
        <attr name="maxLength" format="integer" />
        <attr name="letterSpacing" format="dimension" />
        <attr name="lines" format="integer" />
        <attr name="lineSpacing" format="dimension" />
        <attr name="imeActionLabel" format="string" />
        <attr name="cursorVisible" format="boolean" />
        <attr name="imeOptions" format="integer">
            <enum name="done" value="6" />
            <enum name="go" value="2" />
            <enum name="next" value="5" />
            <enum name="none" value="1" />
            <enum name="previous" value="7" />
            <enum name="search" value="3" />
            <enum name="send" value="4" />
            <enum name="navigate_next" value="134217728" />
            <enum name="navigate_previous" value="67108864" />
        </attr>
        <attr name="ellipsize" format="integer">
            <enum name="start" value="1" />
            <enum name="middle" value="2" />
            <enum name="end" value="3" />
            <enum name="marquee" value="4" />
            <enum name="none" value="0" />
        </attr>
        <attr name="currencySymbol" format="string" />
        <attr name="leftPadding" format="dimension" />
        <attr name="topPadding" format="dimension" />
        <attr name="bottomPadding" format="dimension" />
        <attr name="rightPadding" format="dimension" />
        <attr name="disableComponent" format="boolean" />
    </declare-styleable>




    <declare-styleable name="UILabel">
        <!--Common-->
        <attr name="backgroundColor" />
        <attr name="text" />
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="textStyle" />
        <attr name="fontName" />
        <attr name="strokeColor"/>
        <attr name="strokeWidth" />
        <attr name="cornerRadius"/>
        <attr name="icon" />
        <attr name="imageShape"/>
        <attr name="imageWidth" />
        <attr name="imageHeight"/>
        <attr name="spacing" />
        <!--DERIVED FROM EDITTEXT-->
        <attr name="ellipsize"/>
        <attr name="allCaps" />
        <attr name="showDivider" />
        <attr name="dividerColor" />
        <attr name="dividerWidth" />
        <attr name="showLine" />
        <attr name="lineColor" />
        <attr name="lineWidth" />
        <attr name="iconAlignment" />
        <!--LABEL-->
        <attr name="strikeText" format="boolean" />
        <attr name="underlineText" format="boolean" />
        <attr name="textGravity" format="integer">
            <enum name="left" value="3" />
            <enum name="center" value="17" />
            <enum name="right" value="5" />
        </attr>
        <attr name="endSpace" format="dimension"/>
        <attr name="labelPadding" format="dimension" />

    </declare-styleable>




    <declare-styleable name="UILinearLayout">
        <attr name="strokeColor"/>
        <attr name="strokeWidth" />
        <attr name="cornerRadius"/>
    </declare-styleable>

</resources>