<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.droid.elements.UIEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:hintText="Simple EditText" />

        <com.droid.elements.UIEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:hintText="Rounded EditText"
            app:cornerRadius="5dp"
            app:strokeColor="#000000"
            app:strokeWidth="1dp"/>

        <com.droid.elements.UIEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:hintText="Helper Text EditText"
            app:cornerRadius="5dp"
            app:strokeColor="#000000"
            app:strokeWidth="1dp"
            app:helperText="Helper Text"
            app:helperTextPosition="bottom_left"/>

        <com.droid.elements.UIEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:hintText="Currency EditText"
            app:cornerRadius="5dp"
            app:strokeColor="#000000"
            app:strokeWidth="1dp"
            app:currencySymbol="$"/>

        <com.droid.elements.UIEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:hintText="Icon EditText"
            app:cornerRadius="5dp"
            app:strokeColor="#000000"
            app:strokeWidth="1dp"
            app:icon="@drawable/twiiter"
            app:imageWidth="30dp"
            app:imageHeight="30dp"
            app:showDivider="true"
            app:dividerColor="#000000"
            app:editTextShape="rectangle"
            app:imeOptions="next"/>

        <com.droid.elements.UIEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:hintText="Icon EditText with Line"
            app:icon="@drawable/twiiter"
            app:imageWidth="30dp"
            app:imageHeight="30dp"
            app:showLine="true"
            app:lineColor="#000000"
            app:editTextShape="none"
            app:imeOptions="done"/>

    </LinearLayout>

